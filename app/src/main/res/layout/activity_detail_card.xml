<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik"
                    android:text="Detail Card"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_purple1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/back" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="343dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:srcCompat="@drawable/card_potrait" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="48dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Name"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Bank"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Account"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Amount"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Status"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:text="Valid"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_bank"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:text="Fulus Bank"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_item_acc"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:text="$ 200"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:text="Active"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_valid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/rubik"
                        android:textColor="#000000"
                        android:text="2023 - 2028"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>